<div class='card bg-light text-dark p-4 md-2'>
  <div class='row'>

    <div class='col-5'>
      <img src='https://source.unsplash.com/E6HjQaB7UEA/800x600' class='img-fluid rounded-start' alt="image">
    </div>

    <div class='col-7'>
      <h3 class='card-title'><%= @restaurant.name %></h3>
      <div class='card-body'>
        <h5>Address</h5>
        <p><%= @restaurant.address%></p>
        <br>
        <h5>Phone number:</h5>
        <p><%= @restaurant.phone_number%></p>
        <br>
        <h5>Category</h5>
        <h6><%= @restaurant.category.capitalize %></h6>
      </div>
    </div>

  </div>
</div>

<div class='p-4 md-4'>

  <h2>Reviews</h2>

</div>

<%= link_to 'Back', restaurants_path, class: 'btn btn-warning rounded-4' %>
